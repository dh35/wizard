{
  "name": "server-config-wizard",
  "version": "1.0.0",
  "description": "Web-based server configuration wizard with AI-assisted hardware database",
  "main": "server/dist/index.js",
  "scripts": {
    "start": "ts-node server/index.ts",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/index.ts",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build && cd ../server && tsc",
    "postinstall": "npm run build",
    "start:prod": "NODE_ENV=production node server/dist/index.js"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "react-router-dom": "^7.1.1",
    "sequelize": "^6.35.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
